@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <li class="nav-item">
        @Html.ActionLink("Контролен панел", "Index", "Management/Products")
    </li>
        <li class="nav-item">
            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-item">Изход</a>
        </li>
            <li class="nav-item">
                @using (Html.BeginForm("LogOff", "Account", new { area = string.Empty }, FormMethod.Post, new { id = "logoutForm", @class = "nav-item" }))
                {
                    @Html.AntiForgeryToken()
                }
            </li>
}
else
{
    <li class="nav-item">@Html.ActionLink("Вход", "Login", "Account")</li>
    <li class="nav-item">@Html.ActionLink("Регистрация", "Register", "Account")</li>
}
