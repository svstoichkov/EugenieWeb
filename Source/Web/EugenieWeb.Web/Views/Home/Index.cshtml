@{
    Layout = null;
    ViewBag.Title = "Начало";
}
@model EugenieWeb.Web.ViewModels.Home.AddMessageViewModel

<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eugenie</title>
    <link href="http://fonts.googleapis.com/css?family=Roboto:400,100,500,300,300italic,500italic|Roboto+Condensed:400,300" rel="stylesheet">
    @Styles.Render("~/Content/Landing/css")
    @Scripts.Render("~/bundles/landing/modernizr")
</head>
<body data-spy="scroll" data-target=".header" data-offset="80">
    <div id="ip-container" class="ip-container">
        <header class="ip-header">
            <div class="ip-loader">
                <svg width="60px" height="60px" viewBox="0 0 80 80" class="ip-inner">
                    <path d="M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z" class="ip-loader-circlebg"></path>
                    <path id="ip-loader-circle" d="M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z" class="ip-loader-circle"></path>
                </svg>
            </div>
        </header>
        <div class="ip-main">
            <div id="cbp-spmenu" class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-right">
                <div class="mobile_nav_close_button">
                    <a id="hideRight" href=""><span class="close_icon zmdi zmdi-arrow-right"></span></a>
                </div>
                <nav id="mobile_menu_content" class="navbar-nav-mobile"><a href="#home">Home</a><a href="#features">Features</a><a href="#faq">FAQ</a><a href="#newsletter">Newsletter</a><a href="#contact">Contact</a></nav>
            </div>
            <header id="header" class="header navbar navbar-light animated">
                <div class="container">
                    <a href="#home" class="navbar-brand"> <span class="logo">E</span><span>Eugenie</span></a>
                    <div class="navbar">
                        <ul class="nav navbar-nav pull-right">
                            <li class="nav-item"><a href="#features">Възможности</a></li>
                            <li class="nav-item"><a href="#faq">Въпроси</a></li>
                            <li class="nav-item"><a href="#contact">Контакти</a></li>
                            @Html.Partial("_LoginPartial")
                        </ul>
                        <div class="pull-right togger-container"><span id="showRight" class="zmdi zmdi-menu navbar-toggler"></span></div>
                    </div>
                </div>
            </header>
            <div class="main-content">
                <div id="hero" class="hero">
                    <div class="hero-inner">
                        <div class="container">
                            <div class="col-lg-6 col-lg-offset-3">
                                <h1 style="font-size: 150px">Eugenie</h1>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis eget orci nulla. Donec pellentesque lectus arcu, a placerat velit facilisis quis</p>
                                <a href="/downloads/admin" target="_blank" class="btn btn-primary btn-cta btn-lg btn-raised ui-wave">Изтегли Eugenie Admin</a>
                                <a href="/downloads/seller" target="_blank" class="btn btn-primary btn-cta btn-lg btn-raised ui-wave">Изтегли Eugenie Seller</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="features" class="features">
                    <header>
                        <h2 class="section-heading-underline">Възможности</h2>
                    </header>
                    <div class="container">
                        <div class="row">
                            <div class="feature-item col-md-4 text-center wow fadeInUp">
                                <div class="icon-container"><span class="zmdi zmdi-palette"></span></div>
                                <h3>Multiple Colors</h3>
                                <div class="desc">
                                    <p>18 predefined color schemes</p>
                                </div>
                            </div>
                            <div data-wow-delay="0.3s" class="feature-item col-md-4 text-center wow fadeInUp">
                                <div class="icon-container"><span class="zmdi zmdi-view-web"></span></div>
                                <h3>Powerful Layouts</h3>
                                <div class="desc">
                                    <p>multiple layouts to choose from</p>
                                </div>
                            </div>
                            <div data-wow-delay="0.6s" class="feature-item col-md-4 text-center wow fadeInUp">
                                <div class="icon-container"><span class="zmdi zmdi-desktop-windows"></span></div>
                                <h3>AngularJS Web App</h3>
                                <div class="desc">
                                    <p>single page application with AngularJS</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="feature-item col-md-4 text-center wow fadeInUp">
                                <div class="icon-container"><span class="zmdi zmdi-tablet-mac"></span></div>
                                <h3>Responsive Design</h3>
                                <div class="desc">
                                    <p>mobile-ready design adopt to any device</p>
                                </div>
                            </div>
                            <div data-wow-delay="0.3s" class="feature-item col-md-4 text-center wow fadeInUp">
                                <div class="icon-container"><span class="zmdi zmdi-edit"></span></div>
                                <h3>Clean code</h3>
                                <div class="desc">
                                    <p>simple and clean JavaScript code</p>
                                </div>
                            </div>
                            <div data-wow-delay="0.6s" class="feature-item col-md-4 text-center wow fadeInUp">
                                <div class="icon-container"><span class="zmdi zmdi-pin"></span></div>
                                <h3>Internationalization</h3>
                                <div class="desc">
                                    <p>internationalization and localization</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="faq" class="faq">
                    <div class="container">
                        <header>
                            <h2 class="section-heading-underline">Въпроси</h2>
                        </header>
                        <ul class="faq-list">
                            <li class="wow fadeInLeft">
                                <h4 class="faq-q">What browsers does Angular work with?</h4>
                                <p class="faq-a">We run our extensive test suite against the following browsers: Safari, Chrome, Firefox, Opera 15, IE9 and mobile browsers (Android, Chrome Mobile, iOS Safari).</p>
                            </li>
                            <li class="wow fadeInRight">
                                <h4 class="faq-q">Does Angular use the jQuery library?</h4>
                                <p class="faq-a">Yes, Angular can use jQuery if it's present in your app when the application is being bootstrapped. If jQuery is not present in your script path, Angular falls back to its own implementation of the subset of jQuery that we call jQLite.</p>
                            </li>
                            <li data-wow-delay="0.15s" class="wow fadeInLeft">
                                <h4 class="faq-q">What is testability like in Angular?</h4>
                                <p class="faq-a">Very testable and designed this way from ground up. It has an integrated dependency injection framework, provides mocks for many heavy dependencies (server-side communication). See ngMock for details.</p>
                            </li>
                            <li data-wow-delay="0.15s" class="wow fadeInRight">
                                <h4 class="faq-q">Can I use the Angular logo artwork?</h4>
                                <p class="faq-a">Yes! You can find design files in our github repository, under "angular.js/images/logo" The logo design is licensed under a "Creative Commons Attribution-ShareAlike 3.0 Unported License".</p>
                            </li>
                            <li data-wow-delay="0.3s" class="wow fadeInLeft">
                                <h4 class="faq-q">Why is the namespace called "ng"?</h4>
                                <p class="faq-a">Because HTML has Angular brackets and "ng" sounds like "Angular". AngularJS is 100% JavaScript, 100% client-side and compatible with both desktop and mobile browsers. </p>
                            </li>
                            <li data-wow-delay="0.3s" class="wow fadeInRight">
                                <h4 class="faq-q">Is AngularJS a library, framework, plugin or a browser extension?</h4>
                                <p class="faq-a">AngularJS fits the definition of a framework the best, even though it's much more lightweight than a typical framework and that's why many confuse it with a library.</p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div id="newsletter" data-stellar-background-ratio="0.6" class="newsletter">
                    <h2>Абонирай се за нашите новини</h2>
                    <form>
                        <fieldset>
                            <div class="form-group">
                                <div class="ui-input-group">
                                    <input id="name_2" type="text" required class="form-control"><span class="input-bar"></span>
                                    <label>Email</label>
                                </div>
                            </div><a href="javascript:;" type="submit" data-wow-delay="0.15s" class="btn btn-primary btn-lg btn-raised ui-wave wow fadeInUp">Subscribe</a>
                        </fieldset>
                    </form>
                </div>
                <div id="contact" class="contact">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-5">
                                <h3 class="section-heading-underline">Данни за връзка</h3>
                                <div class="contact-info-container wow fadeInLeft">
                                    <p class="lead"> Feel free to contact us, if you have any questions, we'll be glad to help.</p>
                                    <ul class="list-unstyled contact-info">
                                        <li> <span class="zmdi zmdi-pin"></span>София</li>
                                        <li><span class="zmdi zmdi-phone"></span>(012) 345 6789</li>
                                        <li><span class="zmdi zmdi-email"></span>admin@eugenie.com</li>
                                        <li><span class="zmdi zmdi-city-alt"></span>www.eugenie.com</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-5 col-md-offset-2">
                                <h3 class="section-heading-underline">Свържете се с нас</h3>
                                @using (Html.BeginForm("Message", "Home", FormMethod.Post, new { @class = "form-horizontal wow fadeInRight", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <fieldset>
                                        <div class="form-group">
                                            <div class="ui-input-group">
                                                @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control" })
                                                @Html.LabelFor(m => m.Email)
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="ui-input-group">
                                                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 5 })
                                                @Html.LabelFor(m => m.Content)
                                                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "error" })
                                            </div>
                                        </div>
                                        <div class="divider"></div>
                                        <div class="form-group">
                                            <button class="btn btn-raised btn-primary btn-w-sm ui-wave">ИЗПРАТИ</button>
                                        </div>
                                    </fieldset>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer text-center"><span>© Copyright <span id="copyright"></span> Eugenie</span></footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/landing/main")
    @Scripts.Render("~/bundles/landing/vendor")
    @Scripts.Render("~/bundles/landing/loader")
    @Scripts.Render("~/bundles/jqueryval");
</body>
</html>