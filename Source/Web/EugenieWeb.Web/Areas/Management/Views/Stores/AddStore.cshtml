@model EugenieWeb.Web.Areas.Management.ViewModels.Stores.AddStoreViewModel
@{
    ViewBag.Title = "Добави магазин";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">
            @ViewBag.Title
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("AddStore", "Stores", FormMethod.Post, new { @class = "p-t-15", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group form-group-default required ">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "error" })
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group form-group-default required">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-group-default required">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                    </div>
                </div>
            </div>
            <div class="form-group form-group-default required">
                @Html.LabelFor(m => m.Url)
                @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Url, "", new { @class = "error" })
            </div>
            <button class="btn btn-primary btn-cons m-t-10" type="submit">Регистрация</button>
        }
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval");
}